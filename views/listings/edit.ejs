<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Edit your Listings</h3>
    <form action="/listings/<%= listings._id %>/?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" name="listing[title]"   value="<%= listings.title %>" required>
            <div class="invalid-feedback">Title not Looks Good</div>
        </div>
        <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
            <input type="text" class="form-control" name="listing[description]"  value="<%= listings.description %>" required>
        </div>

        <div class="mb-3">
            <img src="<%= originalImageUrl %>" >
        </div>
        <div class="mb-3">
            <label for="img" class="form-label">Upload New Image</label>
            <input type="file" class="form-control" name="listing[image]">
        </div>


        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" class="form-control" name="listing[price]" value="<%= listings.price %>" required>
                <div class="invalid-feedback">Price not Looks Good</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="location" class="form-label">Location</label>
                <input type="text"  class="form-control" name="listing[country]" value="<%= listings.location %>" required>
            </div>
        </div>
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" class="form-control" name="listing[location]" value="<%= listings.country %>" required>
            <div class="invalid-feedback">Country not Looks Good</div>
        </div>
    
        <button class="btn btn-dark edit-btn mt-3">Edit</button>
        <br><br>
    </form>
    </div>
</div>

