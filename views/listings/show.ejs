<% layout("/layouts/boilerplate") %>

<script>
    // Passing data safely from EJS to JS
    const mapToken = "<%= process.env.MAP_TOKEN %>";
    const listing = <%- JSON.stringify(listings) %>;
</script>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3><%= listings.title %></h3>

        <div class="card listing-card offset-2 mt-3">
            <img 
              src="<%= listings.image.url %>" 
              class="card-img-top show-img" 
              alt="listing-image"
            >

            <div class="card-body">
                <!-- OWNER (SAFE NULL CHECK) -->
                <p class="card-text">
                    Owned By
                    <i>
                        <%= listings.owner ? listings.owner.username : "Admin" %>
                    </i>
                </p>

                <p class="card-text"><%= listings.description %></p>

                <p class="card-text">
                    &#8377; <%= listings.price.toLocaleString("en-IN") %>
                </p>

                <p class="card-text"><%= listings.location %></p>
                <p class="card-text"><%= listings.country %></p>
            </div>
        </div>

        <br><br>

        <!-- EDIT / DELETE (SAFE CHECK) -->
        <% if (currUser && listings.owner && listings.owner._id.equals(currUser._id)) { %>
            <div class="btns">
                <a 
                  href="/listings/<%= listings._id %>/edit" 
                  class="btn btn-dark col-1 offset-2 mb-4"
                >
                    Edit
                </a>

                <form 
                  action="/listings/<%= listings._id %>?_method=DELETE" 
                  method="POST"
                >
                    <button class="btn btn-dark offset-4">Delete</button>
                </form>
            </div>
        <% } %>
    </div>

    <!-- REVIEWS SECTION -->
    <div class="col-8 offset-3 mb-3">
        <% if (currUser) { %>
            <hr>
            <h4>Leave a Review</h4>

            <form 
              action="/listings/<%= listings._id %>/reviews" 
              method="POST" 
              novalidate 
              class="needs-validation"
            >
                <div class="mb-3 mt-3">
                    <fieldset class="starability-slot">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked />
                        <input type="radio" id="rate1" name="review[rating]" value="1" />
                        <label for="rate1" title="Terrible">1 star</label>

                        <input type="radio" id="rate2" name="review[rating]" value="2" />
                        <label for="rate2" title="Not good">2 stars</label>

                        <input type="radio" id="rate3" name="review[rating]" value="3" />
                        <label for="rate3" title="Average">3 stars</label>

                        <input type="radio" id="rate4" name="review[rating]" value="4" />
                        <label for="rate4" title="Very good">4 stars</label>

                        <input type="radio" id="rate5" name="review[rating]" value="5" />
                        <label for="rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>

                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea 
                      name="review[comment]" 
                      id="comment" 
                      cols="30" 
                      rows="5" 
                      class="form-control" 
                      required
                    ></textarea>
                    <div class="invalid-feedback">
                        Please add comments
                    </div>
                </div>

                <button class="btn btn-outline-dark">Submit</button>
            </form>
        <% } %>

        <hr>

        <!-- ALL REVIEWS -->
        <% if (listings.reviews.length > 0) { %>
            <div class="row">
                <h4>All Reviews</h4>

                <% for (let review of listings.reviews) { %>
                    <div class="card col-5 ms-3 mb-3">
                        <div class="card-body">
                            <h5 class="card-title">
                                @<%= review.author ? review.author.username : "Anonymous" %>
                            </h5>

                            <p 
                              class="starability-result" 
                              data-rating="<%= review.rating %>"
                            >
                                Rated <%= review.rating %> stars
                            </p>

                            <p class="card-text"><%= review.comment %></p>
                        </div>

                        <% if (currUser && review.author && review.author._id.equals(currUser._id)) { %>
                            <form 
                              action="/listings/<%= listings._id %>/reviews/<%= review._id %>?_method=DELETE" 
                              method="POST" 
                              class="mb-2 mt-2"
                            >
                                <button class="btn btn-sm btn-dark">Delete</button>
                            </form>
                        <% } %>
                    </div>
                <% } %>
            </div>
        <% } %>
    </div>

    <!-- MAP -->
    <div class="col-8 offset-3 mb-3">
        <h3>Where youâ€™ll be</h3>
        <div id="map"></div>
    </div>
</div>

<script src="/js/map.js"></script>
